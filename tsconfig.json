{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "incremental": false,
    "target": "ES2021",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
